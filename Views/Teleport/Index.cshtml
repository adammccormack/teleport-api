@using DemoLibrary2.Models
@model TeleportViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Teleport Scores</h2>

<form asp-controller="Teleport" asp-action="Index" method="post">
    <div class="mb-3">
        <label class="form-label">Select Continent</label>
        <select class="form-select" asp-items="Model.ContinentsSelectList" asp-for="SelectedContinent">
            <option value="NOSELECTEDVALUE">--Please Select A Continent--</option>
        </select>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
