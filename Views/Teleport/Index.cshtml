@using DemoLibrary2.Models
@model TeleportViewModel

@{
    ViewData["Title"] = "Index";
}

@if (TempData["AlertMessage"] != null){
<div class="alert alert-primary" role="alert">
    @TempData["AlertMessage"]
</div>
}

<h2>Teleport Scores</h2>

<form asp-controller="Teleport" asp-action="Index" method="post">
    <div class="mb-3">
        <label class="form-label">Continents</label>
        <select id="select-continent"class="form-select" asp-items="Model.ContinentsSelectList" asp-for="SelectedContinent">
            <option value="NOSELECTEDVALUE">  Please Select A Continent  </option>
        </select>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#select-continent").change(function () {
                var continents = document.getElementById("select-continent");
            })
        });
    </script>
}