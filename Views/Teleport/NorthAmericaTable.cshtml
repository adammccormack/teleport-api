@using DemoLibrary2.Models
@model TeleportViewModel

@{
    ViewData["Title"] = "NorthAmericaTable";
}

<h2>City Summaries</h2>

<div class="row">
    <div class="col-md-12"></div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>City</th>
                <th>Score</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Toronto?.name</td>
                <td>@((int)@Model.TorontoScore.teleport_city_score)</td>
                <td>@Html.Raw(@Model.TorontoScore.summary)</td>
            </tr>
            <tr>
                <td>@Model.Montreal?.name</td>
                <td>@((int)@Model.MontrealScore?.teleport_city_score)</td>
                <td>@Html.Raw(@Model.MontrealScore.summary)</td>
            </tr>
            <tr>
                <td>@Model.Boston?.name</td>
                <td>@((int)@Model.BostonScore.teleport_city_score)</td>
                <td>@Html.Raw(@Model.BostonScore.summary)</td>
            </tr>
            <tr>
                <td>@Model.NewYork?.name</td>
                <td>@((int)@Model.NewYorkScore.teleport_city_score)</td>
                <td>@Html.Raw(@Model.NewYorkScore.summary)</td>
            </tr>
            <tr>
                <td>@Model.Vancouver?.name</td>
                <td>@((int)@Model.VancouverScore.teleport_city_score)</td>
                <td>@Html.Raw(@Model.VancouverScore.summary)</td>
            </tr>
        </tbody>
    </table>
</div>
