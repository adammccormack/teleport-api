@using DemoLibrary2.Models
@model TeleportViewModel

@{
    ViewData["Title"] = "Table";
}

<h2>City Summaries</h2>

<div class="row">
    <div class="col-md-12"></div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>City</th>
                <th>Score</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (UrbanAreasModel.NorthAmericaUrbanAreas.UaItem city in Model.NorthAmericaCities)
                @*@foreach (ScoresModel.NorthAmericaScores.Root score in Model.NorthAmericaScore)*@
                {
            <tr>
                <td>@city.name</td>
                <td>@Model.NorthAmericaScore.teleport_city_score</td>
                <td>@Model.NorthAmericaScore.summary</td>
            </tr>
                }
        </tbody>
    </table>
</div>
