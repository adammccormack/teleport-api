@using DemoLibrary2.Models
@model TeleportViewModel

    @{
        ViewData["Title"] = "Table";
    }

    <h2>City Summaries</h2>

    <div class="row">
        <div class="col-md-12"></div>
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>City</th>
                    <th>Score</th>
                    <th>Summary</th>
                </tr>
            </thead>
            <tbody>             
                <tr>
                    <td>@Model.Boston.name</td>
                    <td>@((int)Model.BostonScore.teleport_city_score)</td>
                    <td>@Html.Raw(@Model.BostonScore.summary)</td>
                </tr>
                <tr>
                    <td>@Model.LasVegas.name</td>
                    <td>@((int)@Model.LasVegasScore.teleport_city_score)</td>
                    <td>@Html.Raw(@Model.LasVegasScore.summary)</td>
                </tr>
            </tbody>
        </table>
    </div>
